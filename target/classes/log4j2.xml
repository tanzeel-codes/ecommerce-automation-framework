<?xml version="1.0" encoding="UTF-8" ?>
<Configuration status="WARN">
    <Properties>
        <Property name="BasePath">./logs</Property>
    </Properties>
    <Appenders> <!-- WAYS TO PRINT-->
        <!-- Console Appender -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>

        <!-- File Appender -->
        <File name="FileLogger" fileName="${BasePath}/app.log" append="true">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
    </Appenders>
    <Loggers> <!-- WHAT & WHERE TO PRINT -->
        <!-- Root logger -->
        <Root level="info">  <!-- LEVEL -> all < trace < debug < info < warn < error < fatal < off -->
            <AppenderRef ref="Console"/>  <!-- PRINT THE LOGS IN CONSOLE-->
            <AppenderRef ref="FileLogger"/>  <!-- PRINT THE LOGS IN FILE -->
        </Root>
    </Loggers>
</Configuration>